<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragments.AccountFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/userimg"
        android:src="@drawable/admin"
        app:layout_constraintBottom_toTopOf="@+id/usernameTXT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/usernameTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="UserName :"
        android:textColor="@color/white"

        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameFrmSgnUpPg"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="6dp"
        app:layout_constraintBottom_toBottomOf="@id/usernameTXT"
        app:layout_constraintLeft_toRightOf="@id/usernameTXT"
        app:layout_constraintTop_toTopOf="@id/usernameTXT" />

    <TextView
        android:id="@+id/mailidTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Email ID \t\t\t:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/usernameTXT"
        app:layout_constraintRight_toLeftOf="@id/mailidFrmSgnUpPg"
        app:layout_constraintTop_toBottomOf="@id/usernameTXT"

        />

    <TextView
        android:id="@+id/mailidFrmSgnUpPg"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="6dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/mailidTXT"
        app:layout_constraintLeft_toRightOf="@id/mailidTXT"
        app:layout_constraintRight_toRightOf="@id/usernameFrmSgnUpPg"
        app:layout_constraintTop_toTopOf="@id/mailidTXT" />

    <TextView
        android:id="@+id/PassTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Password\t:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/mailidTXT"
        app:layout_constraintRight_toLeftOf="@id/passFrmSgnUpPg"
        app:layout_constraintTop_toBottomOf="@id/mailidTXT" />

    <TextView
        android:id="@+id/passFrmSgnUpPg"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:drawableLeft="@drawable/ic_baseline_password_24"
        android:drawablePadding="6dp"
        app:layout_constraintBottom_toBottomOf="@id/PassTXT"
        app:layout_constraintLeft_toRightOf="@id/PassTXT"
        app:layout_constraintRight_toRightOf="@id/mailidFrmSgnUpPg"
        app:layout_constraintTop_toTopOf="@id/PassTXT" />


</androidx.constraintlayout.widget.ConstraintLayout>